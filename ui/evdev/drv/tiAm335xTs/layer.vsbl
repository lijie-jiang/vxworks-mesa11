Layer TI_AM335X_TS
    {
    SYNOPSIS        TI AM335X touch screen driver
    HELP            This provides the TI AM335X touch screen driver.
    VERSION         1.1.1.2
    FEATURE         UI
    VSB_REQUIRES    CPU_ARMARCH7 && TI_SITARA
    LAYER_REQUIRES  VXBUS_BUSLIB VXBUS_CORE FDT
    OPTIONAL        YES
    DEFAULT         NO
    RETROFIT        {REPLACE, 1.0.0.0 - 1.0.0.1, DEFAULT, NO} \
                    {REPLACE, 1.0.0.0 - 1.1.1.2, VSB_REQUIRES, (CPU_ARMARCH7 && TI_SITARA)} \
                    {REMOVE,  1.0.0.0 - 1.1.1.2, LAYER_REQUIRES, TI_SITARA} \
                    {REPLACE, 1.0.0.0 - 1.1.1.2, FEATURE, UI}
    }
